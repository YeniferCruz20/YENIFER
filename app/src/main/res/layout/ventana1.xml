<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="15dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUSQUEDA POR CODIGO"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/et_codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/styleet"
        android:drawableStart="@drawable/ic_key24dp"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Ingrese el Codigo del Articulo"
        android:inputType="number"
        android:paddingLeft="25dp"
        />


    <Button
        android:id="@+id/btnbuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="95dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/stylebuton"
        android:text="Consulta por Codigo"
        android:textAlignment="center"
        android:textColor="#000000" />
    <TextView
    android:id="@+id/tv_close"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
    android:text="X"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center"/>

</RelativeLayout>